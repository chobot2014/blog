<h1>Welcome To ChoBlog!</h1>
<%= link_to 'All articles on ChoBlog', controller: 'articles' %> </br> <h3>Sign in to post your own content!</h3>
<p>Articles Currently Trending on ChoBlog</p>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'delete this article', article,
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>